{
  "name": "debugassist",
  "displayName": "debugassist",
  "description": "While powerful, agentic AI tools like Cursor can abstract away the debugging process, limiting learning opportunities. Our tool offers a more balanced approach, providing targeted assistance to augment—not automate—a developer's understanding.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    ""
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "debugassist.getText",
        "title": "DebugAssist: Get Text from Active Editor"
      },
      {
        "command": "debugassist.showWebview",
        "title": "DebugAssist: Show Webview Panel"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "node -r esbuild-runner/register build.ts",
    "watch": "node -r esbuild-runner/register build.ts --watch",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.18.6",
    "@types/vscode": "^1.104.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.10",
    "esbuild-runner": "^2.2.2",
    "eslint": "^9.34.0",
    "glob": "^11.0.3",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "dotenv": "^17.2.2"
  }
}
